<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageview_teststart_logo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/img_teststart_horse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_teststart_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/airbnb_cereal_black"
        android:text="나는 무슨 명지인일까?"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageview_teststart_logo" />

    <TextView
        android:id="@+id/textview_item_subtitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="명지 MTMI 검사를 통해 여러분의 유형을 알아보세요!\n성격에 맞는 외부상가부터  명지대 근처 편의시설을 알려드립니다!  자 이제 시작해 볼까요? "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_teststart_title" />

    <Button
        android:id="@+id/button_teststart_teststart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_rounded_corner"
        android:backgroundTint="@color/main_home_color"
        android:fontFamily="@font/airbnb_cereal_black"
        android:text="Let's Test!"
        android:textSize="40sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_item_subtitle" />


</androidx.constraintlayout.widget.ConstraintLayout>