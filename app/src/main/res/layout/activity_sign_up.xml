<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E3FDFA"
        tools:context=".SignUpActivity">

        <TextView
            android:id="@+id/textView_signUp_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/airbnb_cereal_black"
            android:gravity="center_horizontal"
            android:text="Welcome to MTMI"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@id/textVIew_signUp_subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.8" />

        <TextView
            android:id="@+id/textVIew_signUp_subtitle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/airbnb_cereal_medium"
            android:gravity="center_horizontal"
            android:text="Provide your basic imformation below."
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@id/textVIew_signUp_subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_signUp_title"
            app:layout_constraintWidth_percent="0.9" />

        <com.github.florent37.materialtextfield.MaterialTextField
            android:id="@+id/editText_signUp_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@id/editText_signUp_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textVIew_signUp_subtitle"
            app:layout_constraintWidth_percent="0.8"
            app:mtf_image="@drawable/ic_toolbar_user"
            app:mtf_labelColor="@color/main_home_color"
            app:mtf_openKeyboardOnFocus="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="id"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="15sp" />

        </com.github.florent37.materialtextfield.MaterialTextField>

        <com.github.florent37.materialtextfield.MaterialTextField
            android:id="@+id/editText_signUp_password"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editText_signUp_id"
            app:layout_constraintWidth_percent="0.8"
            app:mtf_image="@drawable/ic_toolbar_user"
            app:mtf_labelColor="@color/main_home_color"
            app:mtf_openKeyboardOnFocus="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </com.github.florent37.materialtextfield.MaterialTextField>

        <com.github.florent37.materialtextfield.MaterialTextField
            android:id="@+id/editText_signUp_confirm_password"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editText_signUp_password"
            app:layout_constraintWidth_percent="0.8"
            app:mtf_image="@drawable/ic_toolbar_user"
            app:mtf_labelColor="@color/main_home_color"
            app:mtf_openKeyboardOnFocus="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </com.github.florent37.materialtextfield.MaterialTextField>

        <com.github.florent37.materialtextfield.MaterialTextField
            android:id="@+id/editText_signUp_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editText_signUp_confirm_password"
            app:layout_constraintWidth_percent="0.8"
            app:mtf_image="@drawable/ic_toolbar_user"
            app:mtf_labelColor="@color/main_home_color"
            app:mtf_openKeyboardOnFocus="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="이름"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </com.github.florent37.materialtextfield.MaterialTextField>

        <com.github.florent37.materialtextfield.MaterialTextField
            android:id="@+id/editText_signUp_studentId"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editText_signUp_name"
            app:layout_constraintWidth_percent="0.8"
            app:mtf_image="@drawable/ic_toolbar_user"
            app:mtf_labelColor="@color/main_home_color"
            app:mtf_openKeyboardOnFocus="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="학번"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </com.github.florent37.materialtextfield.MaterialTextField>

        <Spinner
            android:id="@+id/spinner_signUp_major"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:spinnerMode="dialog"
            android:entries="@array/major"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/editText_signUp_studentId"
            app:layout_constraintWidth_percent="0.8" />

<!--        <com.github.florent37.materialtextfield.MaterialTextField-->
<!--            android:id="@+id/editText_signUp_major"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="0dp"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintHeight_percent="0.1"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@id/editText_signUp_studentId"-->
<!--            app:layout_constraintWidth_percent="0.8"-->
<!--            app:mtf_image="@drawable/ic_toolbar_user"-->
<!--            app:mtf_labelColor="@color/main_home_color"-->
<!--            app:mtf_openKeyboardOnFocus="true">-->

<!--            <EditText-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:hint="전공"-->
<!--                android:inputType="number"-->
<!--                android:maxLines="1"-->
<!--                android:textColor="#ffffff"-->
<!--                android:textSize="15sp" />-->
<!--        </com.github.florent37.materialtextfield.MaterialTextField>-->

        <com.github.florent37.materialtextfield.MaterialTextField
            android:id="@+id/editText_signUp_dateOfBirth"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_signUp_major"
            app:layout_constraintWidth_percent="0.8"
            app:mtf_image="@drawable/ic_toolbar_user"
            app:mtf_labelColor="@color/main_home_color"
            app:mtf_openKeyboardOnFocus="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="yyyy/mm/dd"
                android:hint="생일"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </com.github.florent37.materialtextfield.MaterialTextField>

        <RadioGroup
            android:id="@+id/radioButton_signUp_gender"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editText_signUp_dateOfBirth"
            app:layout_constraintWidth_percent="0.8">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남성" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:text="여성" />
        </RadioGroup>

        <com.github.florent37.materialtextfield.MaterialTextField
            android:id="@+id/editText_signUp_email"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radioButton_signUp_gender"
            app:layout_constraintWidth_percent="0.8"
            app:mtf_image="@drawable/ic_toolbar_user"
            app:mtf_labelColor="@color/main_home_color"
            app:mtf_openKeyboardOnFocus="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="yyyy/mm/dd"
                android:hint="email"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </com.github.florent37.materialtextfield.MaterialTextField>

        <com.github.florent37.materialtextfield.MaterialTextField
            android:id="@+id/editText_signUp_test"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editText_signUp_email"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.8"
            app:mtf_image="@drawable/ic_toolbar_user"
            app:mtf_labelColor="@color/main_home_color"
            app:mtf_openKeyboardOnFocus="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="yyyy/mm/dd"
                android:hint="scorllTest"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </com.github.florent37.materialtextfield.MaterialTextField>



    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>