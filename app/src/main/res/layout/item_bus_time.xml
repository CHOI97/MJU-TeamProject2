<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="2dp"
    android:layout_gravity="center"
    android:background="@drawable/bg_rounded_corner_stroke"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/textView_itemBusTime_departureTimeNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8:00"
        android:textSize="15sp"
        android:fontFamily="@font/airbnb_cerealextra_bold"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/textView_itemBusTime_roadAccessTimeNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8:15"
        android:textSize="15sp"
        android:fontFamily="@font/airbnb_cerealextra_bold"
        app:layout_constraintTop_toBottomOf="@id/textView_itemBusTime_departureTimeNum"
        app:layout_constraintStart_toStartOf="@id/textView_itemBusTime_departureTimeNum"
        app:layout_constraintEnd_toEndOf="@id/textView_itemBusTime_departureTimeNum"/>



</androidx.constraintlayout.widget.ConstraintLayout>