<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_rounded_corner_gradient3">

    <ImageView
        android:id="@+id/imageView_itemMainBanner_img"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:src="@drawable/img_esfp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView_itemMainBanner_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ISTJ - 세상의 소금형"
        android:textSize="20sp"
        android:fontFamily="@font/maple_story_bold"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView_itemMainBanner_img"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textView_itemMainBanner_subTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="한번 시작한 일은 끝까지 해내는 사람들"
        android:textSize="15sp"
        android:fontFamily="@font/maple_story_bold"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintStart_toEndOf="@id/imageView_itemMainBanner_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_itemMainBanner_title"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>