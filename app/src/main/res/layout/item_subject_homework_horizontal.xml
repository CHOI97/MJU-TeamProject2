<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <TextView
        android:id="@+id/textView_itemSubjectHomeworkHorizontal_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="14"
        android:textStyle="bold"
        android:textSize="10sp"
        android:padding="3dp"
        android:textAlignment="center"
        android:background="@drawable/bg_rounded_corner_stroke"/>

    <TextView
        android:id="@+id/textView_itemSubjectHomeworkHorizontal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView_itemSubjectHomeworkHorizontal_number"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="10주차 출석과제 온라인"
        android:textSize="10sp"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/textView_itemSubjectHomeworkHorizontal_myScoreKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView_itemSubjectHomeworkHorizontal_title"
        app:layout_constraintStart_toStartOf="@id/textView_itemSubjectHomeworkHorizontal_title"
        android:text="점수:  "
        android:textSize="7sp"/>

    <TextView
        android:id="@+id/textView_itemSubjectHomeworkHorizontal_myScoreValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView_itemSubjectHomeworkHorizontal_title"
        app:layout_constraintStart_toEndOf="@id/textView_itemSubjectHomeworkHorizontal_myScoreKey"
        android:textSize="7sp"
        android:text="7"
        android:textColor="#145DEC"/>

    <TextView
        android:id="@+id/textView_itemSubjectHomeworkHorizontal_totalScoreKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/textView_itemSubjectHomeworkHorizontal_myScoreValue"
        app:layout_constraintStart_toEndOf="@id/textView_itemSubjectHomeworkHorizontal_myScoreValue"
        android:text="배점:  "
        android:textSize="7sp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/textView_itemSubjectHomeworkHorizontal_totalScoreValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/textView_itemSubjectHomeworkHorizontal_totalScoreKey"
        app:layout_constraintStart_toEndOf="@id/textView_itemSubjectHomeworkHorizontal_totalScoreKey"
        android:text="10"
        android:textSize="7sp"/>

    <TextView
        android:id="@+id/textView_itemSubjectHomeworkHorizontal_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView_itemSubjectHomeworkHorizontal_myScoreKey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="마감기한: 2021.05.16 오후 11:59"
        android:textColor="#FA0C0C"
        android:textSize="8sp"
        android:gravity="center"/>





</androidx.constraintlayout.widget.ConstraintLayout>